!!! Strict
%html{ html_attrs('en') }
  %head
    %title Movie alert
    %link( rel='stylesheet' type='text/css' href='/stylesheets/application.css' )    
  %body
    #header
      %form#filters( action='/' )
        %ul
          %li.used
            %select( id='type' )
              %option( value='dvd' ) DVD
              %option( value='cinema' ) Cinema
              %option( value='torrents' ) Torrents
          %li
            %input.default( type='text' id='movie_title' value='Title' )/
          %li
            %input.default( type='text' id='movie_actor' value='Actor' )/
          %li
            %input.default( type='text' id='movie_director' value='Director' )/
          %li
            %select.default( id='movie_genre' )
              %option.default Genre
              - Genres.each do |genre|
                %option= genre.capitalize
      %form#subscriptions( action='/subscribe' )
        %ul
          %li#email
            %input.default( name='subs_mail' type='text' value='Your e-mail' )/
          %li#twitter
            %input.default( name='subs_twit' type='text' value='Your twitter name' )/
          %li
            %input( type='submit' value='Subcribe' )/

    = yield
    
    %ul#dates
      - (0..2).map { |i| Date.today.year + i }.each do |year|
        %li
          %a( href="/year:#{year}" )= year
          %ul
            - (1..12).each do |month|
              - if Date.today.year != year or Date.today.month <= month
                %li
                  %a( href='/release_date:#{year}-#{month}' )
                    = Date::MONTHNAMES[month]

    %script( type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js' )
    %script( type='text/javascript' src='/javascripts/application.js' )

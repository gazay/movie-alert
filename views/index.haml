- unless @movies.empty?
  %ul{ :class => hide_if_part(@format) }
    - @movies.each do |movie|
      %li( id="movie-#{movie['imdb_id']}" )
        .info
          .director
            %label Director:
            = movie['director']
          .actors
            %label Actors:
            = movie['actors'].join(', ')
          .director
            %label Genres:
            = movie['genres'].join(', ')
          .plot
            = movie['plot']
        - if movie['poster']
          %img{ :src => poster_thumb(movie['poster'], 150, 200) }/
        %h1= typographer(movie['title'])
        - if movie['release_date']
          .release_date= format_date(movie['release_date'], @year)
  -if @all > @offset + @movies.count
    .next.hide
      .offset.hide= @offset + @movies.count
      %input( type='button' value='Gimme more â†“' )
    
- else
  %h1.empty No movies

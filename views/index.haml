- unless @movies.empty?
  %ul{ :class => hide_if_part(@format) }
    - @movies.each do |movie|
      %li( id="movie-#{movie['imdb_id']}" )
        .panel
          .wrapper
            .info
              .director
                %label Director:
                = #Directors.find_one(movie['director'])['name']
              .actors
                %label Actors:
                = #movie['actors'].map { |i| Actors.find_one(i)['name'] }.join(', ')
              .director
                %label Genres:
                = #movie['genres'].map { |i| Genres.find_one(i)['name'] }.join(', ')
              .plot
                = movie['plot']
            .control
              %a.close( href='#' ) Close
              %form( action='/subscribe' )
                %input.default( name='subs_mail' type='text' value='Your e-mail' )/
                %input.default( name='subs_twit' type='text' value='Your twitter name' )/
                %input( type='submit' value='Subcribe to movie' )/
                %a.imdb{ :href => "http://www.imdb.com/title/tt#{movie['imdb_id']}" }
                  = "More on IMDb"
            .float_clear
        .card
          - if movie['poster']
            %img{ :src => poster_thumb(movie['poster'], 150, 200) }/
          %h1= typographer(movie['title'])
          - if movie['release_date']
            .release_date= format_date(movie['release_date'], @time_filter)
  -if @all > @offset + @movies.count
    .next.hide
      .offset.hide= @offset + @movies.count
      %input( type='button' value='Gimme more â†“' )
    
- else
  %h1.empty No movies

- unless @movies.empty?
  %ul{ :class => hide_if_part(@format) }
    - @movies.each do |movie|
      %li( id="movie-#{movie['imdb_id']}" )
        .info
          .director
            %label Director:
            = #movie['director']['name']
          .actors
            %label Actors:
            = #movie['actors'].map { |i| i['name'] }.join(', ')
          .director
            %label Genres:
            = #movie['genres'].map { |i| i['name'] }.join(', ')
          .plot
            = movie['plot']
        - if movie['poster']
          %img{ :src => poster_thumb(movie['poster'], 150, 200) }/
        %h1= movie['title']
        - if movie['release_date']
          .release_date= format_date(movie['release_date'], @year)
  -if @all > @offset + @movies.count
    %span.next_offset.hide= @offset + @movies.count
    %input.hide( type='button' class='next' value='Next movies â†“' )
    
- else
  %h1.empty No movies
